[flake8]
max-line-length = 120

ignore =
        # Ignore linebreak indents for long operations
        E126
        # Not worrying about spaces around arithmetic operations
        E225, E226, E231, E251
        # Not worrying about blank lines
        E301, E302, E303, E306
        # Linebreaks before/after unary operators are okay
        W503, W504
exclude =
        # Don't need to check .git nor .eggs
        .git,
        .eggs
        # Largely autogenerated
        docs/conf.py
	examples/
	tests/
	setup.py